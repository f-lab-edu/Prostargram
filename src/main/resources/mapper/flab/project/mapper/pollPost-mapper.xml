<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="flab.project.mapper.PollPostMapper">

    <select id="findAllowMultipleVotes" resultType="boolean">
        SELECT allow_multiple_votes
        FROM POLL_POST
        WHERE post_id = #{postId};
    </select>

    <select id="findPollPeriod" parameterType="long" resultType="flab.project.data.dto.domain.PollPeriod">
        SELECT start_date,
               end_date
        FROM POLL_POST
        WHERE post_id = #{postId};
    </select>

</mapper>